<div class="contents row">
  <div class="container">
    <h2>投稿する</h2>
    <%= form_with model: @item, class: 'form', local: true do |f| %>
      <div class="form-area">
        <label class="form-post">
          <span class="frame">クリックして画像を添付</span>
          <%= f.file_field :image, class: 'form-image' %><br>
        </label>
        <%= f.text_field :name, placeholder: "名前", class: 'form-name' %><br>
        <%= f.text_field :url, placeholder: "写真引用元URL", class: 'form-url' %><br>
      </div>
      <%= f.submit "投稿", class: 'btn submit' %>
    <% end %>
  </div>
</div>
