<!DOCTYPE html>
<html>
  <head>
    <title>EmoSha</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header_left">
        <h1 class="title"><a href="/">エモ写</a></h1>
        <div class="header_center">
          <% if user_signed_in? %>
            <%# <a class="signup" href="/users/sign_up">新規登録</a> %>
            <%= current_user.age %>
            <%= link_to "年齢変更", destroy_user_session_path, method: :delete, class: "signout" %>
          <% else %>
            <%#= link_to "ログイン", new_user_session_path, class: 'post' %> <!-- ログイン画面に移行する -->
            <%= render "devise/sessions/new" %>
          <% end %>
        </div>
        <div class="header_right">
          <a class="post" href="/items/new">新規投稿</a>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>Copyright EmoSha 2020.</p>
    </footer>
  </body>
</html>